{
  "name": "ota-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production pm2 start system/server/index.js -i max && pm2 logs all",
    "stop": "pm2 stop system/server/index.js",
    "monit": "pm2 monit",
    "dev": "cross-env NODE_ENV=development && nodemon system/server",
    "test": "standard && mocha --recursive test",
    "test:coverage": "standard && istanbul cover _mocha test --recursive --report lcovonly",
    "codecov": "cat coverage/lcov.info | codecov",
    "upgrade-interactive": "npm-check --update"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoomHKG/ota-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zoomHKG/ota-server/issues"
  },
  "homepage": "https://github.com/zoomHKG/ota-server#readme",
  "dependencies": {
    "algoliasearch": "^3.30.0",
    "apidoc": "^0.17.6",
    "boom": "^7.2.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.0.0",
    "compression": "^1.7.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "helmet": "^3.15.0",
    "http-status-codes": "^1.3.0",
    "morgan": "^1.9.0",
    "pm2": "^3.0.3",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "rotating-file-stream": "^1.3.7",
    "swagger-jsdoc": "^1.10.3",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "npm-check": "^5.7.1",
    "standard": "^11.0.1"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "public/"
    ]
  },
  "nodemonConfig": {
    "verbose": false,
    "watch": [
      "src/",
      "system/",
      "config/"
    ],
    "ignore": [
      "test/"
    ]
  }
}
